@section Scripts
{
    <script src="~/js/Datatable/DataTable_GetData.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            GetDataTable();
        });


        var GetDataTable = function () {

            var clmns = [
                { "data": null, visible: false },
                { "data": "companyName" },
                {
                    data: null,
                    className: "dt-center",
                    targets: -1,
                    orderable: false,
                    render: function (data, type, full, meta) {
                        return '<button class="btn btn-info font-weight-bold btn-pill mr-2  min-w-90px EfaturaPortalApp-datatables-update"  title="Düzenle" data-endpoint="Company/Update" data-id="' + full.id +'">Güncelle</button>';
                    }
                }
            ];

            GetData("Company/GetAll", "", "Company/Update", clmns);

        };

        function datatableUpdate() {
            GetDataTable();
        }


        function doupload() {
            var file = document.getElementById("excelfile").files[0];
            if (!file) {
                Notiflix.Notify.Failure("Lütfen Dosya Seçiniz");
                return;
            }
                
            var formData = new FormData();
            formData.append("file", file);

            $.ajax({
                url: 'Depremkayit/AddWithExcel',
                type: 'POST',
                dataType: 'json',
                data: formData,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    Notiflix.Block.Standard("body");
                },
                uploadProgress: function (event, position, total, percentComplete) {
                    //var percentVal = percentComplete + '%';
                    //$(".js-add-bulk-progress").css("width", percentVal);
                },
                success: function (data) {
                    Notiflix.Notify.Success("İşlem Başarılı");
                    Notiflix.Block.Remove("*", 0);
                    document.getElementById("excelfile").value = "";
                    GetDataTable();
                },
                error: function (err) {
                    var errortext = err && err.responseText && err.responseText.length > 50 ? "Hata Oluştu" : err.responseText;
                    Notiflix.Notify.Failure(errortext);
                    Notiflix.Block.Remove("*", 0);
                    document.getElementById("excelfile").value = "";
                    
                }
            });
        };

    </script>


}